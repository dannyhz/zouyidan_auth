<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.1//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zyd.dao.IMenuDao">
	
	<sql id="all_columns">
		MENU_PARENT_ID, 
		MENU_NAME, 
		MENU_TYPE, 
		MENU_AUTH_LEVEL, 
		MENU_VISIBILITY, 
		MENU_SERIAL_NO, 
	 	MENU_ICONCLASS, 
		MENU_HREF, 
		MENU_ITEM_ID, 
		MENU_STATUS, 
		MENU_CODE
	</sql>
	
	<insert id="insertMenu" parameterType="com.zyd.model.auth.MenuDo">
		insert into
			sweet_auth_menu(<include refid="all_columns"/>)
		values(
		 	#{menuParentId},          
		    #{menuName},
		    #{menuType},
		    #{menuAuthLevel},
		    #{menuVisibility},
		    #{menuSerialNo},
		    #{menuIconclass},
		    #{menuHref},
		    #{menuItemId},
		    #{menuStatus},
		    #{menuCode}
		)
	
	</insert>
	
	<delete id="deleteAuthByRole" parameterType="com.zyd.model.auth.SysRole">
		delete from 
			sys_auth 
		where 
		    role_id = #{roleId}
	</delete>
</mapper>